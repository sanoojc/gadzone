<!-- myOrders Start -->
<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5 d-flex flex-column">
        {{#each orders}}
        <div class="col-lg-12 col-md-12 col-sm-12 pb-1 d-flex align-items-center">
            <a href="/viewOrder/{{this._id}}" class="product-item bg-light mb-4">
                <div class=" product-img position-relative overflow-hidden">
                    <img class="img-fluid" style="width:150px; height: 150px; object-fit: contain;" src="/uploads/{{this.product.mainImage.filename}}" alt="">
                </div>
                <div class="ms-4 py-4 d-flex align-items-center flex-column"style="width:210px; height: 210px; object-fit: contain;">
                    <a class="h6 text-decoration-none text-truncate" href="/viewOrder/{{this._id}}">
                        <h6> product : {{this.product.productName}}</h6>
                        <h6>price : {{this.product.productPrice}}</h6>
                        <h6>quantity : {{this.quantity}}</h6>
                        <h6>total : {{this.total}}</h6>
                    </a>
                </div>
                <div class="d-flex">
                <div class="me-5">
                    <a class="btn btn-block btn-success font-weight-bold my-3 py-3 ms-5 "
                        href="/viewOrder/{{this._id}}">view</a>
                </div>
                 {{#ifEquals this.orderStatus 'returned'}}
                <div class="">
                 <a class="btn btn-block  border font-weight-bold my-3 py-3 ms-5" href="/viewOrder/{{this._id}}">Returned</a>
                </div>
                {{/ifEquals}}
                {{#ifEquals this.orderStatus 'delivered'}}
                <div class="">
                 <a onclick="return confirm('are you sure want to return this product')" class="btn btn-block btn-primary border font-weight-bold my-3 py-3 ms-5" href="/return/{{this._id}}">Return</a>
                </div>
                {{else}}
                {{#ifEquals this.orderStatus 'returned'}}
                {{else}}
                <div class="">
                    <a onclick="return confirm('are you sure want to cancel this order')" class="btn btn-block btn-danger border font-weight-bold my-3 py-3 ms-5" href="/cancelOrder/{{this._id}}">cancel order</a>
                </div>
                {{/ifEquals}}
                {{/ifEquals}}
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>
