    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>



    <script>

        function quantityDecrement(id){
               let quantityBox=document.getElementById("quantityBox"+id)
               if(quantityBox.value>1){
            axios.get('/minusCartQuantity/'+id).then(result=>{
            console.log(result)
               quantityBox.value=Number(quantityBox.value)-1
               let totalPrice=document.getElementById('totalPrice'+id)
               let price=document.getElementById('productPrice'+id).textContent
               let subTotal=document.getElementById('subTotal')
               let totalAmount=document.getElementById('totalAmount')
               totalPrice.textContent=Number(price)*Number(quantityBox.value)
               totalAmount.textContent=Number(subTotal.textContent)-Number(price)
               subTotal.textContent=Number(subTotal.textContent)-Number(price)
            })
               }
        else{
            window.location.reload()
        }
        }
        function quantityIncrement(id){
                    let quantityBox=document.getElementById('quantityBox'+id)
            if(quantityBox.value<10){
            axios.get('/addCartQuantity/'+id).then(result=>{
                    quantityBox.value=Number(quantityBox.value)+1
                    let totalPrice=document.getElementById('totalPrice'+id)
                    let price= document.getElementById('productPrice'+id).textContent
                    let subTotal=document.getElementById('subTotal')
                    let totalAmount=document.getElementById('totalAmount')
                    totalPrice.textContent=Number(price)*Number(quantityBox.value)
                     totalAmount.textContent=Number(subTotal.textContent)+Number(price)
                    subTotal.textContent=Number(subTotal.textContent)+Number(price)
            })
            }
                else{
                    window.location.reload()
                }
        }
    </script>



