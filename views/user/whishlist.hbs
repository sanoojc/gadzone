<!-- Cart Start -->
<div class="container-fluid">
     <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">wishlist</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>cart</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {{#each products}}
                    <tr>

                        <td class="align-middle d-flex justify-content-around align-items-center"><img
                                src="/uploads/{{this.mainImage.filename}}" alt="" class="me-2"
                                style="width: 50px;  height: 70px;">{{this.productName}}
                        </td>

                        <td id="productPrice{{this._id}}" class="align-middle">{{this.productPrice}}</td>
                        <td class="align-middle">
                             <button class="btn btn-primary  px-3 " onclick="location.href='/addToCart/{{this._id}}'">Add To Cart</button>
                        </td>
                        <td class="align-middle"><span class="btn btn-sm btn-danger"
                                onclick="if(confirm('are you sure remove from wishlist?')){window.location.href='/removeFromWhishlist/{{this._id}}'}"><i class="fa fa-times"></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
