<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <form class="login-container-user" method="post" action="/resetPassword">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <h2 class="fw-bold mb-2 text-uppercase">reset password</h2>
                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" for="typeEmailX">Email</label>
                                    <input type="email" id="typeEmailX" class="form-control form-control-lg" name="email"/>
                                </div>
                                     {{#if error}}
                                    <div>
                                         <p class="text-danger-50 mt-5">{{message}}</p>
                                    </div>
                                    {{/if}}
                                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="/login">Back to login</a>
                                </p>
                                <button class="btn  btn-outline-light btn-lg px-5" type="submit">verify</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>